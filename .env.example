# Core auth (required)
# Use the same value in your request header: x-api-key
API_KEY=replace-with-a-random-secret

# Dashboard auth (required if you want to use /dashboard + dashboard APIs)
# Use the same value in your browser/dashboard requests header: x-dashboard-key
HONEY_POT_DASHBOARD_KEY=replace-with-another-random-secret

# LLM reply generation (recommended)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
GEMINI_API_KEY=
GEMINI_MODEL=gemini-1.5-flash

# Agent behavior
AGENT_MAX_HISTORY_MESSAGES=12
LLM_TIMEOUT_SECONDS=10
ENABLE_LLM_BEHAVIOR_ANALYSIS=true
HIGH_LOAD_MODE=false
LLM_GLOBAL_RPM_LIMIT=26
LLM_REPLY_RPM_LIMIT=18
LLM_BEHAVIOR_RPM_LIMIT=8
LLM_EXTRACTION_RPM_LIMIT=6
LLM_BEHAVIOR_SAMPLE_EVERY_N_SCAM_MESSAGES=2

# Structured extraction (LLM) (optional)
ENABLE_LLM_EXTRACTION=true
LLM_EXTRACTION_MIN_INTERVAL_SECONDS=15
INACTIVITY_FINALIZE_SECONDS=120

# Session store (in-memory) cleanup
SESSION_TTL_SECONDS=21600
SESSION_CLEANUP_INTERVAL_SECONDS=60

# GUVI callback (required for evaluation)
HONEY_POT_CALLBACK_URL=https://hackathon.guvi.in/api/updateHoneyPotFinalResult
CALLBACK_TIMEOUT_SECONDS=5
CALLBACK_MAX_ATTEMPTS=3
CALLBACK_BACKOFF_BASE_SECONDS=1
CALLBACK_MAX_WORKERS=4
ENABLE_CALLBACK_UPDATES=true
CALLBACK_MAX_UPDATES=10

# API response mode (keep false for evaluator compatibility)
HONEY_POT_EXTENDED_RESPONSE=false

# Server port
PORT=8000
